// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": false,
        "**/*.hex": false,
        "**/*.bin": false,
        "**/*.uf2": false,
        "**/keyboards/[^md]*": true,
        "**/keyboards/m[^a]*": true,
        "**/keyboards/d[^r]*": true,
        "**/keyboards/ma[^s]*": true,
        "**/keyboards/dr[^o]*": true,
        "**/keyboards/mas[^s]*": true,
        "**/keyboards/dro[^p]*": true,
        "**/keyboards/mass[^d]*": true,
        "**/keyboards/massd[^r]*": true,
        "**/keyboards/massdr[^o]*": true,
        "**/keyboards/massdro[^p]*": true
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "python.formatting.provider": "yapf",
    "[json]": {
        "editor.formatOnSave": false
    },
    "clangd.arguments": [
        "--header-insertion=never"
    ]
}
